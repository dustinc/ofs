  position absolute
  left 0
  top 0
  margin-left 0
  text-align center
  font-size 2.0em
  width 900px
  height 2px

  a
    position absolute
    left -9999px
    top -75px
    display block

  a:focus, a:active
    position relative
    left 0
    top 100px
    z-index 9999
