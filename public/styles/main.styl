#fab-four div
  width 200px
  float left

#fab-four img
  float right

#fab-four p, #social-ctas p
  font-size 1.2em

#fab-four h2, #social-ctas h2
  font-size 2.4em

/* social-ctas */
#social-ctas
  margin-top 20px

#social-ctas section
  text-align center
  width 417px
  float left
  height 150px

#social-ctas p
  font-size 1.6em

#home-points section#join-our-newsletter
  border-width 2px 1px 2px 2px

#home-points section#join-our-newsletter input[type='text']
  display block
  width 250px
  margin 20px auto 0
  font-size 1.6em

#home-points section#join-our-newsletter input[type='submit']
  display block
  margin 10px auto
  padding 5px 15px
  background-color $teal
  color #fff
  font-size 1.6em

#home-points section#join-our-newsletter input[type='submit']:hover
  background-color $lightteal

#home-points section#find-us-on-facebook
  border-width 2px 2px 2px 1px

#social-ctas img
  margin 10px auto

/* END HOME PAGE */

/* FOOTER */
/* pre-footer */
#pre-footer
  background-color $teal
  color #fff
  padding 20px 15px
  border $border
  margin-top 20px

#pre-footer section
  width 268px
  padding 0 10px
  float left

#pre-footer h3
  font-family $scriptfont
  font-size 2.8em
  line-height 1em
  margin 0
