/* VARIABLES */
$teal = #008f96
$lightteal = #4cbdc3
$darkteal = #006368
$darkgray = #3b3b3b
$midgray = #565656
$lightgray = #9b9b9b

$sansfont = arial, 'sans serif'
$scriptfont = AlexBrushRegular, 'brush script std', serif
$seriffont = BergamoStdRegular, times, 'times new roman', serif

$border = 2px solid $midgray
$tealborder = 2px solid $darkteal
/* END VARIABLES */

/** BEGIN DOCUMENT CSS **/
body
  color $darkgray
  font-family $sansfont
  line-height 1.6em

#container
  width 900px
  margin 10px auto 0
  position relative

a
  color $teal

a:hover
  color $darkteal

h2
  font-family $seriffont
  line-height 1.6em

fieldset
  border 1px solid black

input
  margin 0 5px
  padding 2px 5px
  border 1px solid $lightgray

input[type='submit']
  background $darkgray
  color #fff
  font-weight bold
  border 0
  outline 0
  padding 6px

input[type='submit']:hover
  background-color #ccc
  cursor pointer

.centered
  display block
  margin 0 auto

/* HEADER */
#header h1
  display block
  width 540px
  height 142px
  float left

/* LOGIN */
#login
  width 360px
  float right
  color $lightgray

#login form
  float right

#login input
  color $lightgray

#login input#login-button
  margin-right 0
  color $darkgray

#login p
  font-size 1.2em
  line-height 2.5em
  text-align right

#login p a
  color $lightgray

#login p a:hover
  color $darkgray

/* NAV */
nav
  font-size 19.5px
  text-align center
  margin 10px 0

nav ul li
  display inline
  margin 0 10px

nav a
  text-decoration none
  color $darkgray

nav a:hover
  color $teal

/* HOME PAGE */
/* tagline */
#tagline
  background-color $teal
  font-family $sansfont
  font-size 2.2em
  color #fff
  text-align center
  padding 25px 0
  border $border

  img
    width 700px
    margin 0 auto

/* home-points */
#home-points section
  border $border
  padding 10px 15px

#home-points img
  display block

/* help-colleges-find-you */
#home-points section#help-colleges-find-you
  text-align center
  margin-bottom 20px
  padding 0 15px
  border-width 0 2px 2px

#help-colleges-find-you h2
  font-size 3.0em

#help-colleges-find-you p
  font-size 1.4em
  margin-bottom 30px

a#build-button
  background $teal
  color #fff
  font-size 1.5em
  padding 10px
  margin 0 10px
  text-decoration none

a#build-button:hover
  cursor pointer
  background-color $lightteal

#help-colleges-find-you img
  margin 0 auto
  padding-top 5px

/* fab-four */
#fab-four section
  text-align left
  width 417px
  height 175px
  overflow hidden
  float left

#home-points section#learn-the-basics
  border-width 2px 1px 1px 2px

#home-points section#expand-your-skills
  border-width 2px 2px 1px 1px

#home-points section#join-a-community
  border-width 1px 1px 2px 2px

#home-points section#find-a-position
