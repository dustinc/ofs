/** Clearfix **/
.clearfix:after
  content "."
  display block
  height 0
  clear both
  visibility hidden

/** End Clearfix **/

/** Begin Font Fix */
body
  font-size 62.5%

input, select, th, td, p
  font-size 1em

/** End Font Fix **/

/** Classes **/
.hide
  display none

.float-left
  float left

.float-right
  float right

.tip
  color #555
  display inline-block
  font-size 10px
  width 500px

/** HTML5 **/
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section
  display block

/** ACCESSIBILITY **/
