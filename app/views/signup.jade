extends layout

block content
  h2 Create New Account
  
  #sub-content
    form(action='/user/create', method='post')

      input(type='hidden', name='user[user_type]', value='Teacher')

      div
        label(for='email') Email:
        input(type='text', id='email', name='user[email]')

      div
        label(for='type') User Type:
        select(name='user[user_type]', id='type')
          for user_type in user_types.values
            option(value=user_type) #{user_type}

      div
        label(for='uname') Username:
        input(type='text', id='uname', name='user[username]')

      div
        label(for='pw') Password:
        input(type='password', id='pw', name='user[password]')
      div
        label(for='cpw') Confirm Password:
        input(type='password', id='cpw', name='user[confirm_password]')

      input(type='submit', value='Save')
