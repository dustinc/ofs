extends ../admin/index

block sub_content
  h3= page_title

  ul.sub-menu
    if !n
      li: a(href='/admin/article/new') Create New
    else
      li: a(href='/admin/article/new?n='+n) Create New

  for article in articles
    div(id=article._id).article
      h4: a(href='/article/'+article._id) #{article.title}
      .article-body
        !{article.excerpt}
  else
    p No Articles