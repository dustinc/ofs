extends ../layout

block content
  h2.pageheader #{user.name.full}
  
  #sub-content.user-profile-view

    block user_menu
      - if(typeof s_user != 'undefined' && s_user != false && (s_user._id == profile.user_id || s_user.is_admin))
        include _usersubmenu

    block sub_content
      
      h3 Account Info for #{user.name.full}
      ul.sub-menu
        li: a(href="/user/#{user._id}/edit") Edit Account
        
      p <strong>Email:</strong> #{user.email}
      p
        strong Username: 
        | #{user.username}
      p
        strong Display Name: 
        | #{user.display_name}