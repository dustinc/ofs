extends ../admin/index

block sub_content
  h3 Users
  
  #sub-content
    block sub_content
      ul.user-values
        for user in users
          li
            h4: a(href='#', id=user.username, class='toggle') #{user.username}
            div(class=user.username + ' hide')
              a(href='/user/#{user._id}').button-box edit
              |  
              if s_user.is_admin
                a(href='/admin/user/#{user._id}/delete').delete.button-box delete
              p
                strong Email:
                |  #{user.email}
              p
                strong Name:
                |  #{user.firstname} #{user.lastname}
        else
          li
            p No Users