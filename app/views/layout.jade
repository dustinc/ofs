doctype 5
html
  head
    title OnlineFacultySupport.com
    link(rel='stylesheet', href='/styles/main.css')
    script(src='/scripts/jquery-1.8.0.min.js')
    
    - if(typeof(scripts) != 'undefined')
      for scrpt in scripts
        script(src=scrpt)
    
  body
    #container
      #header.clearfix
        h1 
          a(href='/', title='Online Faculty Support')
            img(src='/images/onlinefacultysupport-logo.png', alt='Online Faculty Support')
            
        #login
          form#top-login-form(action='POST')
            input(type='text', id='user-name', name='User Name', value='User Name')
            input(type='text', id='password', name='Password', value='Password')
            input(type='submit', id='login-button', name='Login', value='Login')
          .clearfix
          p
            a(href='/signup') Create an account
            |  to start building your profile.
    
      block menu_main
        nav
          != partial('_menu')
          
      block divider
        .top-divider
          
      block content
     
      block footer
        #pre-footer.clearfix
          section
            h3 More Information
            ul
              li: a(href='') About OnlineFacultySupport.com
              li: a(href='') Membership Benefits
              li: a(href='') Resources for Institutions
              
          section
            h3 Top Articles
            ul
              li: a(href='') How to Write a Stand-Out CV
              li: a(href='') Generating Interest in Online Discussions
              li: a(href='') Lorem Ipsum
              
          section
            h3 Popular Discussions
            ul
              li: a(href='') Lorem ipsum dolor sit amet
              li: a(href='') Ut felis arcu
              li: a(href='') Etiam condimentum sem scelerisque
              
